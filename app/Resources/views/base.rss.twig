<?xml version="1.0" encoding="UTF-8" ?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
    <channel>
        <title>{{ title }}</title>
        <link>{{ link }}</link>
        <description>{{ description }}</description>
        <language>{{ language }}</language>
        <pubDate>{{ pubDate | date('r') }}</pubDate>
        <lastBuildDate>{{ lastBuildDate | date('r') }}</lastBuildDate>
        <atom:link href="{{ url(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}" rel="self" type="application/rss+xml" />
        {% if ttl is defined %}<ttl>{{ ttl }}</ttl>{% endif %}
        {%- for item in items %}
        <item>
            <title>{{ item.title }}</title>
            <link>{{ item.link }}</link>
            <description>{{ item.description }}</description>
            <pubDate>{{ item.pubDate | date('r') }}</pubDate>
            <guid>{{ item.guid }}</guid>
        </item>
        {%- endfor %}
    </channel>
</rss>
