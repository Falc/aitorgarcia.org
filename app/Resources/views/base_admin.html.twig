{% extends "::base.html.twig" %}

{% block title %}AG Backend{% endblock %}

{% block navbar_container %}
<div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
    </button>
    <a class="navbar-brand" href="{{ path('main_index') }}">AG Backend</a>
</div>

<div class="navbar-collapse collapse">
    <ul class="nav navbar-nav navbar-right">
        <li{% if 'main_admin_index.' in current_route %} class="active"{% endif %}>
            <a href="{{ path('main_admin_index') }}">{{ 'admin.navigation.overview' | trans }}</a>
        </li>
        <li class="dropdown{% if 'blog_' in current_route %} active{% endif %}">
            <a class="dropdown-toggle" data-toggle="dropdown" href="javascript:;">
                {{ 'navigation.blog' | trans }}
                <b class="caret"></b>
            </a>
            <ul role="menu" class="dropdown-menu">
                <li{% if 'blog_post_' in current_route %} class="active"{% endif %}>
                    <a href="{{ path('blog_admin_post_list') }}">{{ 'navigation.posts' | trans }}</a>
                </li>
                <li{% if 'blog_comment_' in current_route %} class="active"{% endif %}>
                    <a href="{{ path('blog_admin_comment_list') }}">{{ 'navigation.comments' | trans }}</a>
                </li>
            </ul>
        </li>
        <li class="dropdown{% if 'portfolio_' in current_route %} active{% endif %}">
            <a class="dropdown-toggle" data-toggle="dropdown" href="javascript:;">
                {{ 'navigation.portfolio' | trans }}
                <b class="caret"></b>
            </a>
            <ul role="menu" class="dropdown-menu">
                <li{% if 'project_' in current_route %} class="active"{% endif %}>
                    <a href="{{ path('portfolio_admin_project_list') }}">{{ 'navigation.projects' | trans }}</a>
                </li>
                <li{% if 'technology_' in current_route %} class="active"{% endif %}>
                    <a href="{{ path('portfolio_admin_technology_list') }}">{{ 'navigation.technologies' | trans }}</a>
                </li>
            </ul>
        </li>
        <li id="locale-switcher" class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="javascript:;">
                {{ 'navigation.language' | trans }} ({{ current_locale | upper }})
                <b class="caret"></b>
            </a>
            {{ locale_switcher() }}
        </li>
    </ul>
</div><!--/.nav-collapse -->
{% endblock %}
