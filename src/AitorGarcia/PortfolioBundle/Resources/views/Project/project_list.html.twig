{% extends "PortfolioBundle::layout.html.twig" %}

{% block navigation %}
<li><a href="{{ path('index') }}">Portada</a></li>
<li class="active"><a href="{{ path('project_list') }}">Proyectos</a></li>
<li><a href="#">Contacto</a></li>
{% endblock %}

{% block page %}
<h2>Estos son algunos de mis trabajos</h2>
{% if projects is empty %}
<p> No hay ning√∫n proyecto.</p>
{% else %}
<ul id="project-list">
{% for project in projects %}
    <li class="{{ cycle(['odd', 'even'], loop.index0) }}">
        <a class="project" href="{{ path('project_show', { 'url': project.url }) }}">
        {% if project.screenshots is empty %}
            <img src="/files/no-project-screenshot.jpg" alt="{{ project.name }}" title="{{ project.name }}" />
        {% else %}
            <img src="/{{ project.screenshots[0].getThumbWebPath() }}" alt="{{ project.name }}" title="{{ project.name }}" />
        {% endif %}
            <span>{{ project.name }}</span>
        </a>
    </li>
{% endfor %}
</ul>
<div class="clear"></div>
{% endif %}
{% endblock %}
