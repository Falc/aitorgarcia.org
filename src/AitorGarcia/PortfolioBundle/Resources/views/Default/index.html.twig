{% extends "::layout.html.twig" %}

{% block stylesheets %}
{% stylesheets filter="cssrewrite,?yui_css" output='css/frontend-*.css'
    'css/main.css'
    'bundles/portfolio/css/index.css'
%}
    <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
{% endstylesheets %}
{% endblock %}

{% block subnavigation %}
<h2>{{ 'titles.index' | trans }}</h2>
{{ parent() }}
{% endblock %}

{% block page %}
<div id="block-aboutme" class="block">
    <h3>{{ 'index.about_me' | trans }}</h3>
    <ul>
        <li id="icon-user">{{ 'index.info' | trans | raw }}</li>
        <li id="icon-web-dev">{{ 'index.web_dev' | trans | raw }}</li>
        <li id="icon-desktop-dev">{{ 'index.desktop_dev' | trans | raw }}</li>
        <li id="icon-server">{{ 'index.sys_admin' | trans | raw }}</li>
    </ul>
</div>
<div id="block-technologies" class="block">
    <h3>{{ 'index.which_techs' | trans }}</h3>
    <img src="{{ asset('bundles/portfolio/images/technologies.png') }}" alt="{{ 'common.technologies' | trans }}" />
</div>
<div class="clear"></div>
{% endblock %}
