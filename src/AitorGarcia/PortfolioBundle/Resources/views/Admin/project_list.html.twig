{% extends "::base_admin.html.twig" %}

{% block stylesheets %}
{% stylesheets filter="cssrewrite,?yui_css" output='css/backend-*.css'
    'css/base.css'
    'css/tables.css'
    'bundles/aitorgarciaportfolio/css/admin_project.css'
%}
    <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
{% endstylesheets %}
{% endblock %}

{% block infotext %}{{ 'projects.title.list' | trans }}{% endblock %}

{% block page %}
{% for type, messages in app.session.flashbag.all() %}
    {% for message in messages %}
        <div class="message-{{ type }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}

<div class="row" id="options">
    <div class="pull-right" id="actions">
        <a href="{{ path('admin_project_create') }}" class="btn btn-primary btn-icon">
            <span class="icon icon-add"></span>{{ 'button.create' | trans }}
        </a>
    </div>
</div>

<div class="row">
    <div id="project-list" class="block">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th class="shrink text-center">{{ 'field.id' | trans }}</th>
                        <th>{{ 'field.name' | trans }}</th>
                        <th>{{ 'field.link' | trans }}</th>
                        <th class="shrink text-center">{{ 'field.translations' | trans }}</th>
                        <th class="shrink text-center">{{ 'field.actions' | trans }}</th>
                    </tr>
                </thead>
                <tbody>
                {% for project in projects %}
                    <tr>
                        <td class="text-center">{{ project.id }}</td>
                        <td>{{ project.name }}</td>
                        <td><a href="{{ project.link }}">{{ project.link }}</a></td>
                        <td class="text-center">
                            <a class="btn btn-secondary btn-lang" href="{{ path('admin_project_translation_edit', { 'id': project.id, 'lang': 'en' }) }}" title="{{ 'lang.english' | trans }}">EN</a>
                        </td>
                        <td class="text-center">
                            <a class="btn btn-primary btn-icon btn-icon-notext" href="{{ path('admin_project_edit', { 'id': project.id }) }}" title="{{ 'button.edit_ext' | trans }}">
                                <span class="icon icon-edit">{{ 'button.edit' | trans }}</span>
                            </a>
                            <a class="btn btn-danger btn-icon btn-icon-notext" href="{{ path('admin_project_delete', { 'id': project.id }) }}" title="{{ 'button.delete_ext' | trans }}">
                                <span class="icon icon-cancel">{{ 'button.delete' | trans }}</span>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">{{ 'projects.message.empty_list' | trans }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
