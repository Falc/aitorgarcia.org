{% extends "::layout.html.twig" %}

{% block stylesheets %}
{% stylesheets filter="cssrewrite,?yui_css" output='css/backend-*.css'
    'css/main.css'
%}
    <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
{% endstylesheets %}
{% endblock %}

{% block subnavigation %}
<ul>
    <li><a href="{{ path('admin_project_list') }}">{{ 'subnavigation.admin.list' | trans }}</a></li>
    <li><a href="{{ path('admin_project_create') }}">{{ 'subnavigation.admin.create' | trans }}</a></li>
    <div class="clear"></div>
</ul>
{% endblock %}

{% block page %}
<h2>{{ 'projects.admin.delete_project' | trans }}</h2>
<form action="{{ path('admin_project_delete', { 'id': project_id }) }}" method="post">
    <p>{{ 'projects.admin.confirm_deletion' | trans }}</p>
    {{ form_rest(form) }}
	<input class="button" type="submit" name="save" value="{{ 'form.confirm' | trans }}" />
	<input class="button" type="submit" name="cancel" value="{{ 'form.cancel' | trans }}" />
</form>
{% endblock %}
