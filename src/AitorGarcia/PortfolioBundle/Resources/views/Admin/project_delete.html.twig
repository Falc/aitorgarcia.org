{% extends "::layout.html.twig" %}

{% block title %}{{ 'projects.title.delete' | trans }} - Aitor Garc√≠a (Backend){% endblock %}

{% block stylesheets %}
{% stylesheets filter="cssrewrite,?yui_css" output='css/backend-*.css'
    'css/main.css'
%}
    <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
{% endstylesheets %}
{% endblock %}

{% block subnavigation %}
<ul class="actions">
    <li><a href="{{ path('admin_project_list') }}">{{ 'button.list' | trans }}</a></li>
    <li><a href="{{ path('admin_project_create') }}">{{ 'button.create' | trans }}</a></li>
</ul>
{{ parent() }}
<div class="clear"></div>
{% endblock %}

{% block page %}
<h2>{{ 'projects.title.delete' | trans }}</h2>
<form action="{{ path('admin_project_delete', { 'id': project_id }) }}" method="post">
    <p>{{ 'projects.message.confirm_deletion' | trans }}</p>
    {{ form_rest(form) }}
	<input class="button" type="submit" name="save" value="{{ 'button.confirm' | trans }}" />
	<input class="button" type="submit" name="cancel" value="{{ 'button.cancel' | trans }}" />
</form>
{% endblock %}
