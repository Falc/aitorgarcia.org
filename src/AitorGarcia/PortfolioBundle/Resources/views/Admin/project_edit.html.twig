{% extends "::admin_layout.html.twig" %}

{% block stylesheets %}
{% stylesheets
    'css/main.css'
    'css/forms.css'
    'bundles/portfolio/css/admin.css'
    output='css/backend-*.css' filter="cssrewrite" %}
    <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
{% endstylesheets %}
{% endblock %}

{% block javascripts %}
<script src="{{ asset('bundles/portfolio/js/jquery-1.8.2.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/portfolio/js/project-screenshot-rows.js') }}" type="text/javascript"></script>
{% endblock %}

{% block navigation %}
<li><a href="{{ path('admin_index') }}">Portada</a></li>
<li class="active"><a href="{{ path('admin_project_list') }}">Proyectos</a></li>
<li><a href="{{ path('admin_technology_list') }}">Tecnologías</a></li>
{% endblock %}

{% block subnavigation %}
<ul>
    <li><a href="{{ path('admin_project_list') }}">Lista</a></li>
    <li class="active"><a href="{{ path('admin_project_edit', { 'id': project_id }) }}">Modificar</a></li>
    <div class="clear"></div>
</ul>
{% endblock %}

{% block page %}
<h2>Modificar proyecto</h2>
<form action="{{ path('admin_project_edit', { 'id': project_id }) }}" method="post" {{ form_enctype(form) }}>
	<fieldset>
		<legend>Información del proyecto</legend>
        <div class="_100">
            {{ form_label(form.name) }}
            {{ form_widget(form.name) }}
        </div>
        <div class="_100">
            {{ form_label(form.description) }}
            {{ form_widget(form.description) }}
        </div>
        <div class="_100">
            {{ form_label(form.client) }}
            {{ form_widget(form.client) }}
        </div>
        <div class="_100">
            {{ form_label(form.link) }}
            {{ form_widget(form.link) }}
        </div>
        <div class="_25">
            {{ form_label(form.technologies) }}
            {{ form_widget(form.technologies) }}
        </div>
        {{ form_widget(form._token) }}
    </fieldset>
    <fieldset>
        <legend>Imágenes</legend>
        <div id="screenshots" data-prototype="{% filter escape %}{% include 'PortfolioBundle:prototypes:project_screenshot.html.twig' with {'screenshot': form.screenshots.vars.prototype} %}{% endfilter %}">
        {% for screenshot in form.screenshots %}
            {% include 'PortfolioBundle:Admin:project_screenshot_row.html.twig' with {'screenshot': screenshot} %}
        {% endfor %}
        </div>
    </fieldset>
	<input class="button" type="submit" name="save" value="Guardar" />
</form>
{{ tinymce_init() }}
{% endblock %}
